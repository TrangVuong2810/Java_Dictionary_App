<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox id="wordComp" fx:id="wordComp" maxWidth="1.7976931348623157E308" minWidth="500.0" stylesheets="@../stylesheet/wordComp.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.WordCompController">
   <children>
      <HBox spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <Region minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="50.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="wordBookmarkButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0" textAlignment="CENTER">
               <graphic>
                  <ImageView fx:id="wordBookmarkButtonIMG" fitHeight="50.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Bookmark" />
               </tooltip></Button>
            <Button fx:id="wordEditButton" ellipsisString="E..." minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#editWord" prefHeight="50.0" prefWidth="50.0" textAlignment="CENTER">
               <graphic>
                  <ImageView fx:id="wordEditButtonIMG" fitHeight="50.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" styleClass="wordCompButton">
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Edit" />
               </tooltip></Button>
            <Button fx:id="wordDeleteButton" alignment="CENTER" ellipsisString="D..." minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" prefHeight="50.0" prefWidth="50.0" text="//del" textAlignment="CENTER">
               <graphic>
                  <ImageView fx:id="wordDelButtonIMG" fitHeight="50.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" styleClass="wordCompButton">
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Delete" />
               </tooltip></Button>
         </children>
      </HBox>
      <Label fx:id="wordLabel">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" top="75.0" />
         </VBox.margin></Label>
      <HBox prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="wordPronunButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0">
               <graphic>
                  <ImageView fx:id="wordPronunButtonIMG" fitHeight="50.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" styleClass="wordCompButton">
                     <image>
                        <Image url="@../media/volume.png" />
                     </image>
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Pronounce" />
               </tooltip></Button>
            <TextField fx:id="ipaLabel" HBox.hgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="10.0" top="20.0" />
         </VBox.margin>
      </HBox>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="wordTypeLabel" VBox.vgrow="ALWAYS" />
            <TextArea id="wordMeaning" fx:id="wordMeaning" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" stylesheets="@../stylesheet/wordComp.css" wrapText="true" VBox.vgrow="ALWAYS" />
            <Label fx:id="wordSynonymLabel" text="Synonyms" />
            <TextArea fx:id="wordSynonym" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" wrapText="true" />
         </children>
         <VBox.margin>
            <Insets bottom="30.0" left="10.0" top="10.0" />
         </VBox.margin>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
