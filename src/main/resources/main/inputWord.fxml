            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="-Infinity" styleClass="h2" text="English Word" wrapText="true" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin></Label>
                  <Region HBox.hgrow="ALWAYS" />
