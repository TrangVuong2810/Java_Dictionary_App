                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <graphic>
                  <ImageView fx:id="inputWordButtonIMG" fitHeight="50.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
               <tooltip>
                  <Tooltip text="Execute" />
               </tooltip>
            </Button>
         </children>
